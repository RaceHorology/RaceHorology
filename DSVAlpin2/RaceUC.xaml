<UserControl x:Class="DSVAlpin2.RaceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSVAlpin2"
             mc:Ignorable="d"
             MinHeight="400">

  <UserControl.Resources>
    <local:PositionConverter x:Key="PositionConverter" />
    <local:BooleanToBrushConverter x:Key="BooleanToBrushConverter" />
    <local:ResultCodeConverter x:Key="ResultCodeConverter" />
    <local:ResultCodeWithCommentConverter x:Key="ResultCodeWithCommentConverter" />
  </UserControl.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <TabControl x:Name="tabControlRace1" Height="Auto" Margin="10" Grid.Column="0" Width="Auto">
      <TabItem Header="Konfiguration" FontSize="12" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True">
          <!--<Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Height="25" Grid.ColumnSpan="2">
              <Label DockPanel.Dock="Left" Content="Template"/>
              <Separator/>
            </DockPanel>
          </Grid>-->
          <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblTemplate" Margin="5" Content="Template:" Grid.Row="0" Grid.Column="0"/>
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
              <ComboBox x:Name="cmbTemplate" Margin="5" SelectionChanged="CmbTemplate_SelectionChanged"/>
            </StackPanel>
          </Grid>

          <Grid Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Height="25" Grid.ColumnSpan="2">
              <Label DockPanel.Dock="Left" Content="Allgemein"/>
              <Separator/>
            </DockPanel>
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblRuns" Margin="5" Content="Durchgänge:" Grid.Row="0" Grid.Column="0"/>
            <ComboBox x:Name="cmbRuns" Margin="5" Grid.Row="0" Grid.Column="1"/>
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblConfigErgebnis" Margin="5" Content="Berechnung:" Grid.Column="0"/>
            <ComboBox x:Name="cmbConfigErgebnis" Margin="5" Grid.Column="1" />
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblConfigErgebnisGrouping" Margin="5" Content="Gruppierung:" Grid.Column="0"/>
            <ComboBox x:Name="cmbConfigErgebnisGrouping" Margin="5" Grid.Column="1" />
          </Grid>

          <Grid Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Height="25" Grid.ColumnSpan="2">
              <Label DockPanel.Dock="Left" Content="Durchgang 1"/>
              <Separator/>
            </DockPanel>
          </Grid>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblConfigStartlist1Grouping" Margin="5" Content="Gruppierung:" Grid.Column="0"/>
            <ComboBox x:Name="cmbConfigStartlist1Grouping" Margin="5" Grid.Column="1" />
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblConfigStartlist1" Margin="5" Content="Startsortierung:" Grid.Column="0"/>
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
              <ComboBox x:Name="cmbConfigStartlist1" Margin="5" Grid.Column="1" Grid.ColumnSpan="2"/>
            </StackPanel>
          </Grid>

          <Grid Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Height="25" Grid.ColumnSpan="2">
              <Label DockPanel.Dock="Left" Content="Durchgang 2"/>
              <Separator/>
            </DockPanel>
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblConfigStartlist2Grouping" Margin="5" Content="Gruppierung:" Grid.Column="0"/>
            <ComboBox x:Name="cmbConfigStartlist2Grouping" Margin="5" Grid.Column="1" />
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblConfigStartlist2" Margin="5" Content="Startsortierung:" Grid.Column="0"/>
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
              <ComboBox x:Name="cmbConfigStartlist2" Margin="5" Grid.Column="1" Grid.ColumnSpan="2"/>
            </StackPanel>            
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
              <Button x:Name="btnReset" Content="Reset" Margin="5" Padding="5" Click="BtnReset_Click"/>
              <Button x:Name="btnApply" Content="Apply" Margin="5" Padding="5" Click="BtnApply_Click"/>
            </StackPanel>
          </Grid>

        </StackPanel>

      </TabItem>
      <TabItem Header="Live Timing" FontSize="12" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="20"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="lblLTBewerb" Content="Bewerbsnummer:" Grid.Row="0" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="txtLTBewerb" Grid.Row="0" Grid.Column="1"  Margin="5"/>

            <Label x:Name="lblLTLogin" Content="Login:" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="txtLTLogin" Grid.Row="1" Grid.Column="1"  Margin="5"/>

            <Label x:Name="lblLTPassword" Content="Passwort:" Grid.Row="2" Grid.Column="0" Margin="5"/>
            <PasswordBox x:Name="txtLTPassword" Grid.Row="2" Grid.Column="1"  Margin="5"/>

            <Button x:Name="btnLTLogin" Content="Login" Width="100" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="1"  Margin="5" Click="BtnLTLogin_Click" />

            <Label x:Name="lblLTEvent" Content="Veranstaltung:" Grid.Row="5" Grid.Column="0" Margin="5"/>
            <ComboBox x:Name="cmbLTEvent" Grid.Row="5" Grid.Column="1"  Margin="5" SelectionChanged="CmbLTEvent_SelectionChanged"/>

            <Button x:Name="btnLTStart" Content="Start" Width="100" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1"  Margin="5" Click="BtnLTStart_Click" />

            <Label x:Name="lblLTStatus" Content="Status:" Grid.Row="7" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="txtLTStatus" Grid.Row="7" Grid.Column="1"  Margin="5" MinLines="2" TextChanged="TxtLTStatus_TextChanged" LostFocus="TxtLTStatus_LostFocus"/>



          </Grid>


        </StackPanel>

      </TabItem>
      <TabItem Header="Renndaten" FontSize="12" ScrollViewer.VerticalScrollBarVisibility="Visible">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
          <Grid >
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label x:Name="lblName" Margin="5" Content="Name:" Grid.Row="0" Grid.Column="0"/>
            <TextBox x:Name="txtName" Margin="5" HorizontalAlignment="Stretch"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

            <Label x:Name="lblRaceNo" Margin="5" Content="Bewerbsnummer:" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="txtRaceNo" Margin="5" HorizontalAlignment="Stretch"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

            <Label x:Name="lblDescription" Margin="5" Content="Beschreibung:" Grid.Row="2" Grid.Column="0"/>
            <TextBox x:Name="txtDescription" Margin="5" HorizontalAlignment="Stretch"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" AcceptsReturn="True" Height="50"/>

            <Label x:Name="lblOrganisator" Margin="5" Content="Organisator:" Grid.Row="4" Grid.Column="0"/>
            <TextBox x:Name="txtOrganisator" Margin="5" HorizontalAlignment="Stretch"  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"/>

            <Label x:Name="lblArbitrator" Margin="5" Content="Schiedrichter:" Grid.Row="5" Grid.Column="0"/>
            <TextBox x:Name="txtArbitrator" Margin="5" HorizontalAlignment="Stretch" Grid.Row="5" Grid.Column="1" />
            <TextBox x:Name="txtArbitratorClub" Margin="5" HorizontalAlignment="Stretch" Grid.Row="5" Grid.Column="2" />

            <Label x:Name="lblRaceControl" Margin="5" Content="Rennleiter:" Grid.Row="6" Grid.Column="0"/>
            <TextBox x:Name="txtRaceControl" Margin="5" HorizontalAlignment="Stretch" Grid.Row="6" Grid.Column="1" />
            <TextBox x:Name="txtRaceControlClub" Margin="5" HorizontalAlignment="Stretch" Grid.Row="6" Grid.Column="2" />

            <Label x:Name="lblTrainerRepresentative" Margin="5" Content="Trainervertreter:" Grid.Row="7" Grid.Column="0"/>
            <TextBox x:Name="txtTrainerRepresentative" Margin="5" HorizontalAlignment="Stretch" Grid.Row="7" Grid.Column="1" />
            <TextBox x:Name="txtTrainerRepresentativeClub" Margin="5" HorizontalAlignment="Stretch" Grid.Row="7" Grid.Column="2" />

            <DockPanel Height="25" Grid.Row="8" Grid.ColumnSpan="3">
              <Label DockPanel.Dock="Left" Content="Durchgang 1"/>
              <Separator/>
            </DockPanel>

            <Label x:Name="lblCourseSetter1" Margin="5" Content="Kurssetzer:" Grid.Row="9" Grid.Column="0"/>
            <TextBox x:Name="txtCourseSetter1" Margin="5" HorizontalAlignment="Stretch" Grid.Row="9" Grid.Column="1" />
            <TextBox x:Name="txtCourseSetterClub1" Margin="5" HorizontalAlignment="Stretch" Grid.Row="9" Grid.Column="2" />

            <Label x:Name="lblForeRunner1_1" Margin="5" Content="Vorläufer 1:" Grid.Row="10" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner1_1" Margin="5" HorizontalAlignment="Stretch" Grid.Row="10" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub1_1" Margin="5" HorizontalAlignment="Stretch" Grid.Row="10" Grid.Column="2" />

            <Label x:Name="lblForeRunner1_2" Margin="5" Content="Vorläufer 2:" Grid.Row="11" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner1_2" Margin="5" HorizontalAlignment="Stretch" Grid.Row="11" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub1_2" Margin="5" HorizontalAlignment="Stretch" Grid.Row="11" Grid.Column="2" />

            <Label x:Name="lblForeRunner1_3" Margin="5" Content="Vorläufer 3:" Grid.Row="12" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner1_3" Margin="5" HorizontalAlignment="Stretch" Grid.Row="12" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub1_3" Margin="5" HorizontalAlignment="Stretch" Grid.Row="12" Grid.Column="2" />

            <Label x:Name="lblForeRunner1_4" Margin="5" Content="Vorläufer 4:" Grid.Row="13" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner1_4" Margin="5" HorizontalAlignment="Stretch" Grid.Row="13" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub1_4" Margin="5" HorizontalAlignment="Stretch" Grid.Row="13" Grid.Column="2" />

            <DockPanel Height="25" Grid.Row="15" Grid.ColumnSpan="3">
              <Label DockPanel.Dock="Left" Content="Durchgang 2"/>
              <Separator/>
            </DockPanel>

            <Label x:Name="lblCourseSetter2" Margin="5" Content="Kurssetzer:" Grid.Row="16" Grid.Column="0"/>
            <TextBox x:Name="txtCourseSetter2" Margin="5" HorizontalAlignment="Stretch" Grid.Row="16" Grid.Column="1" />
            <TextBox x:Name="txtCourseSetterClub2" Margin="5" HorizontalAlignment="Stretch" Grid.Row="16" Grid.Column="2" />

            <Label x:Name="lblForeRunner2_1" Margin="5" Content="Vorläufer 1:" Grid.Row="17" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner2_1" Margin="5" HorizontalAlignment="Stretch" Grid.Row="17" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub2_1" Margin="5" HorizontalAlignment="Stretch" Grid.Row="17" Grid.Column="2" />

            <Label x:Name="lblForeRunner2_2" Margin="5" Content="Vorläufer 2:" Grid.Row="18" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner2_2" Margin="5" HorizontalAlignment="Stretch" Grid.Row="18" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub2_2" Margin="5" HorizontalAlignment="Stretch" Grid.Row="18" Grid.Column="2" />

            <Label x:Name="lblForeRunner2_3" Margin="5" Content="Vorläufer 3:" Grid.Row="19" Grid.Column="0"/>
            <TextBox x:Name="txtForeRunner2_3" Margin="5" HorizontalAlignment="Stretch" Grid.Row="19" Grid.Column="1" />
            <TextBox x:Name="txtForeRunnerClub2_3" Margin="5" HorizontalAlignment="Stretch" Grid.Row="19" Grid.Column="2" />

            <Label x:Name="lblForeRunner2_4" Margin="5" Content="Vorläufer 4:" Grid.Row="20" Grid.Column="0"/>
