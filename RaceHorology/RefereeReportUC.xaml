<UserControl x:Class="RaceHorology.RefereeReportUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RaceHorology"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
  </UserControl.Resources>
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="0 10">
      <ItemsControl ItemsSource="{Binding RefReportItemList}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal" Margin="10 3"
              Visibility="{Binding IsAdditional, Converter={StaticResource BoolToVisibilityConverter}}">
              <TextBlock Text="{Binding Text}" Width="300" VerticalAlignment="Center"/>
              <TextBox IsEnabled="{Binding IsAdditional}" Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="350"/>
            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <local:SaveOrResetUC x:Name="ucSaveOrReset" HorizontalAlignment="Left" Margin="10,15,0,0"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
