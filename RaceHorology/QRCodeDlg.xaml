<Window x:Class="RaceHorology.QRCodeDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceHorology"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="QR Code für Sprecheransicht" SizeToContent="WidthAndHeight">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image x:Name="imgQRCode" Grid.Row="0" Grid.Column="0" Height="300" Width="300" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Stretch="Uniform" PreviewMouseDown="onClickQRCode"/>
    <TextBlock x:Name="txtUrl" Text="http://..." Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,10" PreviewMouseDown="onClickQRCode"/>
  </Grid>
</Window>
